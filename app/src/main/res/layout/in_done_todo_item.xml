<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/white"
    android:gravity="center|top"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/in_done_todo_item_ly"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/in_done_todo_item_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="안녕하세요 저는 류승민입니다"
            android:textSize="16dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/in_done_todo_item_complete_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/baseline_check_24" />

        <ImageView
            android:id="@+id/in_done_todo_item_incomplete_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            app:srcCompat="@drawable/baseline_close_24" />

        <ImageButton
            android:id="@+id/in_done_todo_item_delete_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="?attr/actionBarItemBackground"
            app:srcCompat="@drawable/baseline_delete_24" />

    </LinearLayout>

</LinearLayout>