<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center|top">

    <LinearLayout
        android:id="@+id/todoItemLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/todo_rv_item_background"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/todo_item_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="안녕하세요 저는 류승민입니다"
            android:textSize="16dp"
            android:textStyle="bold"></TextView>

        <ImageButton
            android:id="@+id/todo_item_complete_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="?attr/actionBarItemBackground"
            android:visibility="visible"
            app:srcCompat="@drawable/baseline_check_circle_24" />

        <ImageButton
            android:id="@+id/complete_cancel_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="?attr/actionBarItemBackground"
            android:visibility="gone"
            app:srcCompat="@drawable/baseline_cancel_24" />

        <ImageButton
            android:id="@+id/todo_item_delete_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="?attr/actionBarItemBackground"
            app:srcCompat="@drawable/baseline_delete_24" />

    </LinearLayout>
</LinearLayout>